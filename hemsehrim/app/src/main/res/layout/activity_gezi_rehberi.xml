<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gezi_rehberi_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GEZİ REHBERİ"
        android:textColor="@color/purple_500"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gezi_rehberi_aciklama"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="40dp"
        android:text="İzmir Saat Kulesi \n\n1901'de inşa edilmiş olan kule, 25 metre yüksekliğinde ve dört katlıdır.\n\nKonak Meydanı'ndaki İzmir Hükûmet Konağı, Kemeraltı Çarşısı girişi, Konak Yalı Camii ve İzmir Büyükşehir Belediyesi binası arasındaki alanda yer alır."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etkinlikler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/ana_sayfa"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:text="Ana Sayfa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gezi_rehberi_aciklama"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/etkinlikler"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="125dp"
        android:text="Etkinlikler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ana_sayfa" />

    <Button
        android:id="@+id/iletisim"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="140dp"
        android:text="İletişim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etkinlikler" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="232dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gezi_rehberi_id"
        app:srcCompat="@drawable/izmir_saat_kulesi" />


</androidx.constraintlayout.widget.ConstraintLayout>